IN=${1}
case "$(ps -p $$  | awk 'NR>1 {print $4}' | sed 's/\(.*\)\///')" in
        sh)
                LC=$(echo $IN | tr '[:upper:]' '[:lower:]')
                ;;
        bash)
                LC=${IN^^}
                ;;
        zsh)
                LC=${IN:u}
                ;;
esac
echo "$LC"
